model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  image     String?
  role      UserRole   @default(USER)
  status    UserStatus @default(ACTIVE)
  phone     String?
  address   String?



  // verification
  otp       Int?
  otpExpiry DateTime?
  otpType   OtpType?
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum OtpType {
  REGISTRATION
  PASSWORD_RESET
  EMAIL_CHANGE
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
  USER
}
enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}
